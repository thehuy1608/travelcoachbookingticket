<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Controller_index</servlet-name>
        <servlet-class>controller.Controller_index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_home</servlet-name>
        <servlet-class>controller.Controller_home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_ticket_1</servlet-name>
        <servlet-class>controller.Controller_ticket_1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_ticket_2</servlet-name>
        <servlet-class>controller.Controller_ticket_2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_ticket_3</servlet-name>
        <servlet-class>controller.Controller_ticket_3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller_index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_ticket_1</servlet-name>
        <url-pattern>/ticket_1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_ticket_2</servlet-name>
        <url-pattern>/ticket_2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_ticket_3</servlet-name>
        <url-pattern>/ticket_3</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
